<h1 class="page-header">Administradores</h1>

<% if @admins.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @admins.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>

</div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action_message %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">        
        <%= form_for([:backoffice, @admins]) do |f| %>
        <div class="col-lg-6">
            <%= f.label :email %>
            <%= f.text_field :name, class:"form-control", placeholder:"Nome do administrador" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :email %>
            <%= f.text_field :email, class:"form-control", placeholder:"Email do administrador" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :password %>
            <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirmação da senha" %>
        </div><br/>

        <% if policy(@admins).edit? %> 
            <div class="col-sm-12">
                <div class="form-group">
                    <%= f.label :role, "Tipo de Acesso" %>
                    <%= f.collection_radio_buttons :role, options_for_roles, :id, :description do |crb| %>                
                    <div class="radio">
                        <%= crb.label { crb.radio_button + t('enums.admin.role.' + crb.value)  } %>                    
                    </div>
                    <% end %>
                </div>
            </div>
        <% end %>
        <div class="col-lg-12">
            <br/>
            <button type="submit" class="btn btn-default">Salvar</button>            
        </div>
    </div>
    <% end %>
</div>

<!-- /.panel-body -->
</div>
